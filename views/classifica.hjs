        <tr>
            <td><b>P:</b></td>
            <td><b>Squadra:</b></td>
            <td><b>Punti:</b></td>
            <td><b>pv:</b></td>
            <td><b>pp:</b></td>
            <td><b>ps:</b></td>
            <td><b>GF:</b></td>
            <td><b>GS:</b></td>
        </tr>
        {{#squadre}}
        <tr>
            <td>{{posizione}}</td>
            <td><b>{{nome}}</b>:</td>
            <td><b>{{punti}}</b></td>
            <td>{{pv}}</td>
            <td>{{pp}}</td>
            <td>{{ps}}</td>
            <td>{{golfatti}}</td>
            <td>{{golsubiti}}</td>
        </tr>
        {{/squadre}}
